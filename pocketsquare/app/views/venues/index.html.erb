<h3>Search for venues</h3>
<%= form_tag search_venues_path, method: "get" do %>
  <p>
    <%= label_tag :keyword, "Search keywords" %><br />
    <%= text_field_tag :keyword %>
  </p>
  <p>
    <%= label_tag :zip_code %><br />
    <%= text_field_tag :zip_code %>
  </p>

<!-- submit button for api query -->
  <p class="button"><%= submit_tag "Search" %></p>
<% end %>

<% unless @search_results.nil? %>
  <ul>
    <% @search_results.each do |venue| %>
      <li><strong><%= venue[:name] %></strong>, Rated as <%= venue[:rating] %></li>
    <% end %>
  </ul>
<% end %>
